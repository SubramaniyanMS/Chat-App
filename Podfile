  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Chat App
  pod 'MessageKit'
  pod 'Swinject'
  pod 'Alamofire', '~> 5.0'
  pod 'InputBarAccessoryView'

  target 'Chat AppTests' do
    inherit! :search_paths
    pod 'Alamofire'

    # Pods for testing
  end

  target 'Chat AppUITests' do
    # Pods for testing
inherit! :search_paths
    pod 'Alamofire'

  end

end
